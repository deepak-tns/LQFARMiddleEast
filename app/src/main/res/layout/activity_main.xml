                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"/>
                    <TextView
                        android:visibility="visible"
                        android:id="@+id/tv_cableinlets"
                        android:padding="10dp"
                        android:text="Cable Inlets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"/>
                    <TextView
                        android:visibility="visible"
                        android:id="@+id/tv_antennaplacementinvestigation"
                        android:padding="10dp"
                        android:text="Antenna Placement Investigation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"/>
                    <TextView
                        android:visibility="visible"
                        android:id="@+id/tv_sitephotos"
                        android:padding="10dp"
                        android:text="Site Photos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"/>



            </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/linear_los"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:padding="10dp"
                        android:text="Los Site Detail"
                        android:id="@+id/tv_los_sitedetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"/>

                    <TextView
                        android:visibility="visible"
                        android:id="@+id/tv_transmissionlink"
                        android:padding="10dp"
                        android:text="Transmission Link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"/>

                    <TextView
                        android:visibility="visible"
                        android:id="@+id/tv_transmission_nolink"
